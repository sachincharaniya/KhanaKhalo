<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/maincart"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_cart"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/bb"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_below="@id/recycler_cart"
            android:textColor="@android:color/black"
            android:text="@string/total_amount_to_be_paid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/amount"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_below="@id/bb"
            android:textColor="@android:color/black"
            android:text="@string/_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_below="@id/amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:elevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="7dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="-2dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/rounded_corner" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:padding="16dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_rounded"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="21.5dp"
                                android:gravity="center_horizontal"
                                android:text="@string/delivery_address"
                                android:textColor="#333232"
                                android:textSize="23.3sp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="@string/full_name"
                                android:textColor="#9e9d9d"
                                android:textSize="12.3sp" />
                            <EditText
                                android:id="@+id/orderName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:background="@android:color/transparent"
                                android:maxLines="1"
                                android:textColorHint="#c2c2c2"
                                android:textSize="15sp"
                                android:autofillHints="fullname"
                                android:inputType="text" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6.7dp"
                                android:layout_marginEnd="17.3dp"
                                android:background="#9e9e9e" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="@string/mobile_number"
                                android:textColor="#9e9d9d"
                                android:textSize="12.3sp" />
                            <EditText
                                android:id="@+id/orderPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:background="@android:color/transparent"
                                android:maxLines="1"
                                android:textColorHint="#c2c2c2"
                                android:textSize="15sp"
                                android:autofillHints="phone"
                                android:inputType="phone" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6.7dp"
                                android:layout_marginEnd="17.3dp"
                                android:background="#9e9e9e" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="@string/full_address"
                                android:textColor="#9e9d9d"
                                android:textSize="12.3sp" />
                            <EditText
                                android:id="@+id/orderAddress"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@android:color/transparent"
                                android:inputType="text"
                                android:textColor="#333232"
                                android:autofillHints="@string/full_address" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6.7dp"
                                android:layout_marginEnd="17.3dp"
                                android:background="#9e9e9e" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:text="@string/land_mark"
                                android:textColor="#9e9d9d"
                                android:textSize="12.3sp" />
                            <EditText
                                android:id="@+id/orderlandmark"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:inputType="text"
                                android:textColor="#333232"
                                android:autofillHints="@string/land_mark" />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6.7dp"
                                android:layout_marginEnd="17.3dp"
                                android:layout_marginBottom="27dp"
                                android:background="#9e9e9e" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Button
                    android:id="@+id/clearorder"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:text="@string/remove_all"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gray_round"/>
                <Button
                    android:id="@+id/placeorder"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"
                    android:text="@string/place_order"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <ImageView
        android:id="@+id/nocart"
        android:src="@drawable/cart"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:contentDescription="@string/todo" />
</LinearLayout>